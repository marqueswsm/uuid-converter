{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "ignoreDefinitionFiles": false,
        "configFile": "./tslint.json"
      }
    ]
  },
  "rules": {
    "align": [
      true,
      "elements",
      "members",
      "parameters",
      "statements"
    ],
    "variable-name": false,
    "ordered-imports": false,
    "no-var-requires": false,
    "no-empty-interface": false,
    "object-literal-sort-keys": false,
    "member-access": false,
    "member-ordering": false,
    "interface-over-type-literal": false,
    "array-type": false
  },
  "include": [
    "./src/**/*",
    "./src/types/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "src/helpers/jest.ts",
    "src/helpers/testHelpers.ts"
  ]
}
